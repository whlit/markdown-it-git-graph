{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["esnext"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "declaration": true,
    "outDir": "./dist",
    "removeComments": true,
    "stripInternal": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", ".vitepress/**/*.{ts, mts}"],
  "exclude": ["node_modules", "dist", "coverage", ".vitepress/cache"]
}
